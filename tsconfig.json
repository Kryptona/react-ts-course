{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "types/*": [
        "src/types/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "target": "es5",
    "module": "commonjs",
    "downlevelIteration": true,
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "lessons/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}